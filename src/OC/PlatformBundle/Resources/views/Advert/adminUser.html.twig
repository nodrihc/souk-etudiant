{% extends "OCPlatformBundle::layout2.html.twig" %}
{% block title %}
    Administrateur - {{ parent() }}
{% endblock %}
{% block AdminCss %}
    <!-- Admin CSS -->

    <!-- Bootstrap core CSS-->
    <link href="{{ asset('assets/adminTemplate/css/table-user.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="container bootstrap snippet">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table user-list">
                                <thead>
                                <tr>
                                    <th><span>User</span></th>
                                    <th><span>Last login</span></th>
                                    <th class="text-center"><span>Status</span></th>
                                    <th><span>Email</span></th>
                                    <th>Delete</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
    {% for user in listUsers %}
                                    {% if user.username != "admin" %}
                                    <td>
                                        <img src="{{ asset('assets/img/user-alt-128.png') }}" alt="">
                                        <a href="#" class="user-link">{{ user.username  }}</a>
                                        <span class="user-subhead">Member</span>
                                    </td>
                                    <td>{{ user.lastlogin|date("y-M-d H:m:s")}}</td>
                                    <td class="text-center">
                                        <span class="label label-success">Active</span>
                                    </td>
                                    <td>
                                        <a href="#">{{ user.email }}</a>
                                    </td>
                                    <td style="width: 20%;">
                                        <a href="{{ path('oc_platform_delete_user',{'id': user.id} ) }}" class="table-link danger">
                                            <span class="fa-stack success">
                                                <i class="fa fa-trash-o fa-3x "></i>
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                                        {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}