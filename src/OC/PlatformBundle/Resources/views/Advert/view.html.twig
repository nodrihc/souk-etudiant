{% block ocplatform_body %}
    <!-- Properties details page start -->
    <div class="properties-details-page content-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                    <!-- Header -->
                    <div class="heading-properties clearfix sidebar-widget">
                        <div class="pull-left">
                            <h3>{{ advert.titre }}</h3>
                            <p>
                                <i class="fa fa-map-marker"></i>{{ advert.addresse }}
                            </p>
                        </div>
                        <div class="pull-right">
                            <h3><span>{{ advert.prix }} DH</span></h3>
                            <h5>
                                Per Manth
                            </h5>
                        </div>
                    </div>
                    <!-- Properties details section start -->
                    <div class="sidebar-widget mrg-btm-40">
                        <!-- Properties detail slider start -->
                        <div class="properties-detail-slider simple-slider mrg-btm-40 ">
                            <div id="carousel-custom" class="carousel slide" data-ride="carousel">
                                <div class="carousel-outer">
                                    <!-- Wrapper for slides -->
                                    <div class="carousel-inner">
                                        {% for image in listeImages %}
                                            {% if loop.index0 == 0 %}
                                        <div class="item active">
                                            <img src="{{ asset(image.path) }}" class="thumb-preview" alt="Chevrolet Impala">
                                        </div>
                                            {% else %}
                                                <div class="item">
                                                    <img src="{{ asset(image.path) }}" class="thumb-preview" alt="Chevrolet Impala">
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    <!-- Controls -->
                                    <a class="left carousel-control" href="#carousel-custom" role="button" data-slide="prev">
                                    <span class="slider-mover-left no-bg" aria-hidden="true">
                                        <i class="fa fa-angle-left"></i>
                                    </span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="right carousel-control" href="#carousel-custom" role="button" data-slide="next">
                                    <span class="slider-mover-right no-bg" aria-hidden="true">
                                        <i class="fa fa-angle-right"></i>
                                    </span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                                <!-- Indicators -->
                                <ol class="carousel-indicators thumbs visible-lg visible-md">
                                    {% for image in listeImages %}
                                    <li data-target="#carousel-custom" data-slide-to="{{ loop.index0 }}" class=""><img src="{{ asset(image.path ) }}" alt="Chevrolet Impala"></li>
                                        {% endfor %}
                                </ol>
                            </div>
                        </div>
                        <!-- Properties detail slider end -->

                        <!-- Properties description start -->
                        <div class="properties-description mrg-btm-40 ">
                            <div class="main-title-2">
                                <h1><span>Description</span></h1>
                            </div>
                            <p>{{ advert.description }}</p>
                        </div>
                        <!-- Properties description end -->

                        <!-- Properties condition start -->
                        <div class="properties-condition mrg-btm-40 ">
                            <div class="main-title-2">
                                <h1><span>Caractéristiques principale</span></h1>
                            </div>
                            <div class="row">
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <ul class="condition">
                                        <li>
                                            <i class="flaticon-bed"></i>{{ advert.nbrChambres }} Chambres
                                        </li>
                                        <li>
                                            <i class="flaticon-holidays"></i> {{ advert.nbrToilettes }} toilettes
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <ul class="condition">
                                        <li>
                                            <i class="flaticon-apartment"></i>Au {{ advert.quelEtage }} ème Etage
                                        </li>

                                    </ul>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <ul class="condition">


                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- Properties condition end -->

                        <!-- Properties amenities start -->
                        <div class="properties-amenities">
                            <div class="main-title-2">
                                <h1><span>Caractéristiques supplementaires</span></h1>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <ul class="amenities">
                                        {% if advert.meuble %}
                                            <li>
                                                <i class="flaticon-bed"></i>
                                                <span>Meublé</span>
                                            </li>
                                        {% else %}
                                        {% endif %}
                                        {% if advert.ascenceur %}
                                            <li>
                                                <i class="flaticon-shape"></i>
                                                <span>Avec ascenceur</span>
                                            </li>
                                        {% else %}
                                        {% endif %}
                                    </ul>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <ul class="amenities">
                                        {% if advert.parcking %}
                                            <li>
                                                <i class="flaticon-vehicle"></i>
                                                <span>Avec parcking</span>
                                            </li>
                                        {% else %}
                                        {% endif %}
                                        {% if advert.chauffe %}
                                            <li>
                                                <i class="flaticon-air-conditioner"></i>
                                                <span>Avec chauffage</span>
                                            </li>
                                        {% else %}
                                        {% endif %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- Properties amenities end -->
                    </div>
                    <!-- Properties details section end -->

                    <!-- Location start -->
                    <div class="location sidebar-widget">
                        <div class="map">
                            <div class="main-title-2">
                                <h1><span>Localisation</span></h1>
                            </div>
                            <div id="map" class="contact-map"></div>
                        </div>
                    </div>
                    <!-- Location end -->

                    <!-- Location start -->
                    <div class="location sidebar-widget">
                            <div class="main-title-2">
                                <h1><span>ACTIVATION</span></h1>
                            </div>
                        <a href="{{ path('oc_platform_active', {'id': advert.id}) }}" class="btn button-md border-button-theme">Publier!</a>
                    </div>
                    <!-- Location end -->

                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <!-- Sidebar start -->
                    <div class="sidebar right">

                        <!-- Social media start -->
                        <div class="social-media sidebar-widget clearfix">
                            <!-- Main Title 2 -->
                            <div class="main-title-2">
                                <h1><span>Réseaux</span> Sociaux</h1>
                            </div>
                            <!-- Social list -->
                            <ul class="social-list">
                                <li><a href="#" class="facebook"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#" class="twitter"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a></li>
                                <li><a href="#" class="google"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#" class="rss"><i class="fa fa-rss"></i></a></li>
                            </ul>
                        </div>
                        <!-- Social media end -->


                        <!-- Helping center start -->
                        <div class="sidebar-widget helping-box clearfix">
                            <div class="main-title-2">
                                <h1><span>Centre</span> d'aide</h1>
                            </div>
                            <div class="helping-center">
                                <div class="icon"><i class="fa fa-map-marker"></i></div>
                                <h4>Address</h4>
                                <span>123 Kathal St. Tampa City,</span>
                            </div>
                            <div class="helping-center">
                                <div class="icon"><i class="fa fa-phone"></i></div>
                                <h4>Phone</h4>
                                <p><a href="tel:+55-417-634-7071">+55 417 634 7071</a> </p>
                            </div>
                        </div>
                        <!-- Helping center end -->

                        <!-- Latest tweet start -->
                        <div class="sidebar-widget latest-tweet">
                            <div class="main-title-2">
                                <h1><span>Derniers </span> Tweet</h1>
                            </div>
                            <p><a href="#">@Lorem ipsum dolor</a> sit amet, consectetur adipiscing elit. Aenean id dignissim justo. Maecenas urna lacus, bibendum </p>
                            <p>@Lorem ipsum dolor<a href="#">sit amet, consectetur</a> adipiscing elit. Aenean id dignissim justo. Maecenas urna lacus, bibendum quis orci </p>
                        </div>
                        <!-- Latest tweet end -->
                    </div>
                    <!-- Sidebar end -->
                </div>
            </div>
        </div>
    </div>
    <!-- Properties details page end -->

{% endblock %}