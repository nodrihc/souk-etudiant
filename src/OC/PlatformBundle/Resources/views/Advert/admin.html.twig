                        <h1>Panneau de contr√¥le</h1>
                    </li>
                </ol>
                <!-- Icon Cards-->
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-sm-6 mb-3">
                        <div class="card text-white bg-dark o-hidden h-100">
                            <div class="card-body">
                                <div class="card-body-icon">
                                    <i class="fa fa-fw fa-tasks"></i>
                                </div>
                                <div class="mr-5"><h1>Gestion des annonces</h1></div>
                            </div>
                            <a class="card-footer text-white clearfix small z-1" href="{{ path("oc_platform_admin_annonces") }}">
                                <span class="float-left"><h4>{{ listAdvert|length }} en attente</h4></span>
                                <span class="float-right">
