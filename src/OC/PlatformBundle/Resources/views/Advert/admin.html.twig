{% extends "OCPlatformBundle::layout2.html.twig" %}
{% block title %}
    Administrateur - {{ parent() }}
{% endblock %}
{% block AdminCss %}
    <!-- Admin CSS -->

    <!-- Bootstrap core CSS-->
    <link href="{{ asset('assets/adminTemplate/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="{{ asset('assets/adminTemplate/vendor/font-awesome/css/font-awesome.min.css')}}" rel="stylesheet" type="text/css">
    <!-- Page level plugin CSS-->
    <link href="{{ asset('assets/adminTemplate/vendor/datatables/dataTables.bootstrap4.css') }}" rel="stylesheet">
