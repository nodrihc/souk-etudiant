{# src/OC/PlatformBundle/Resources/views/Advert/form.html.twig #}

<div class="content-area submit-property">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="submit-address">
                     {{ form_start(form) }}
                    <div class="main-title-2">
                        <h1><span>Informations de</span> Base</h1>
                    </div>
                    <div class="search-contents-sidebar">
                        <div class="form-group">
                            <label>Titre de l'annonce</label>
                            {{ form_widget(form.titre, {'attr': {'class' : 'input-text', 'placeholder' : 'Titre de l\'annonce'}}) }}
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Status</label>
                                    {{ form_widget(form.status, {'attr' : {'class' : 'selectpicker search-fields'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Type</label>
                                    {{ form_widget(form.type, {'attr' : {'class' : 'selectpicker search-fields'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Prix</label>
                                    {{ form_widget(form.prix, {'attr': {'class' : 'input-text', 'placeholder' : 'MAD'}}) }}
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>L'étage</label>
                                    {{ form_widget(form.quelEtage, {'attr' : {'class' : 'selectpicker search-fields'}}) }}
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Nombres de chambres</label>
                                    {{ form_widget(form.nbrChambres, {'attr' : {'class' : 'selectpicker search-fields'}}) }}
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Nombres de toilettes</label>
                                    {{ form_widget(form.nbrToilettes, {'attr' : {'class' : 'selectpicker search-fields'}}) }}
                                </div>
                            </div>
                        </div>


                </div>
                    <div class="main-title-2">
                        <h1><span>Images de</span> L'annonce</h1>
                    </div>

                        {{ form_widget(form.uploadedFiles, {'attr' : {'class': 'dropzone dropzone-design', 'id' : 'myDropZone'}}) }}
                    <div class="main-title-2">
                        <h1><span>Localisation</span></h1>
                    </div>
                    <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Address</label>
                            {{ form_widget(form.addresse, {'attr': {'class' : 'input-text', 'placeholder' : 'Addresse'}}) }}
                        </div>
                    </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ville</label>
                                {{ form_widget(form.ville, {'attr' : {'class' : 'selectpicker search-fields'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Region</label>
                                {{ form_widget(form.region, {'attr' : {'class' : 'selectpicker search-fields'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Region</label>
                                {{ form_widget(form.universite, {'attr' : {'class' : 'selectpicker search-fields'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="main-title-2">
                        <h1><span>Details sur</span> L'annonce</h1>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Detailed Information</label>
                                {{ form_widget(form.description, {'attr': {'class' : 'input-text', 'placeholder' : 'Description'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <label class="margin-t-10">Caractériques supplementaires</label>
                            <div class="row">
                                <div class="col-lg-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.meuble, {'attr':  { 'id' : 'checkbox1', 'class' : 'checkbox checkbox-theme checkbox-circle'}}) }}
                                    {{ form_widget(form.ascenceur, {'attr':  { 'id' : 'checkbox1', 'class' : 'checkbox checkbox-theme checkbox-circle'}}) }}
                                    {{ form_widget(form.parcking, {'attr':  { 'id' : 'checkbox1', 'class' : 'checkbox checkbox-theme checkbox-circle'}}) }}
                                </div>
                                <div class="col-lg-4 col-sm-4 col-xs-12">
                                    {{ form_label(form.chauffe, "chauffe eau") }}
                                    {{ form_widget(form.chauffe, {'attr':  { 'id' : 'checkbox1', 'class' : 'checkbox checkbox-theme checkbox-circle'}}) }}
                                </div>

                            </div>
                        </div>
                    </div>
                    </div>

                    <div class="alert-danger">
                        {{ form_rest(form) }}
                    </div>
                    <button type="submit" class="btn button-md button-theme"> Déposer !</button>
                    {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

